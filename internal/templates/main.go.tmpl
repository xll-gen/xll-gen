func (s *MyService) OnRtdConnect(ctx context.Context, topicID int32, strings []string, newValues bool) error {
	if len(strings) > 1 {
		ticker := strings[1]
		go func() {
			for {
				select {
				case <-ctx.Done():
					return
				case <-time.After(1 * time.Second):
					// Example: push a random price update
					price := 100.0 + (50.0 * (rand.Float64() - 0.5))
					generated.PushRtdUpdate(topicID, fmt.Sprintf("%s: %.2f", ticker, price))
				}
			}
		}()
	}
	return nil
}

