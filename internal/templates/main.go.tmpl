func (s *MyService) GetPrice(ctx context.Context, ticker string) (float64, error) {
	// Simulate async work
	select {
	case <-time.After(2 * time.Second):
		switch ticker {
		case "AAPL":
			return 150.0, nil
		case "GOOG":
			return 2800.0, nil
		default:
			return 100.0, nil
		}
	case <-ctx.Done():
		return 0, ctx.Err()
	}
}

