func (s *MyService) StockQuote_RTD(ctx context.Context, topicID int32, symbol string) error {
	go func() {
		ticker := time.NewTicker(1 * time.Second)
		defer ticker.Stop()
		
		for {
			select {
			case <-ctx.Done():
				return
			case <-ticker.C:
				price := 100.0 + (50.0 * (rand.Float64() - 0.5))
				val := fmt.Sprintf("%s: %.2f", symbol, price)
				generated.PushRtdUpdate(topicID, val)
			}
		}
	}()
	return nil
}

